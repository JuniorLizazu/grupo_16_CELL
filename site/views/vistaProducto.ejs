<%- include('partials/head') %> 
  <%- include('partials/header') %> 
  <div class="container">
    <section class="perfilUsuario">
        <div class="row perfil principal">

            

            <div class="container">
              
              <section class="row"></section>
              <section class="row"></section>
              <ul class="barra">
              <li class="opciones"><a href="/products/create">Agregar Producto</a></li>
              </ul>
                  <section>
                  <div class="row productos">
                    
                    <div class="col-12 titulo">
                      <h2>Administra Productos</h2>
                    </div>

                        <% producto.forEach(productos => { %>
     


                            <div class="col-12 col-md-6 col-lg-3"> 
                                <div class="contenido">
                                  <p><%= productos.name %></p>
                                  <figure>
            
                                    <a href="/products/detail/<%= productos.id %>"><img src="/images/logos/<%= productos.image %>" alt=""/></a>
        
                                  </figure>
        
                                  <article>
                                    
                                    <form action="/products/delete/<%= productos.id%>?_method=DELETE" method="POST">
            
                                        <button type="submit" class="btn-sm btn-danger" id="darBaja"><i class="fas fa-trash"></i></button>
                                      </form>

                                      <a href="/products/edit/<%= productos.id %> " class="edicion"><i class="fas fa-edit"></i></a>
            
                                    
                                  </article>
                                </div>
                              </div>
            
                          
                          <% }) %>
                        </div>

                    </section>
                </div>
          </div>
    </section>
  </div>

<%- include('partials/footer') %>
