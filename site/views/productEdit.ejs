<!DOCTYPE html>
<html lang="es">
<%- include('partials/head') %>

<body>
    <%- include('partials/header') %> 
    
    <div class="signup-form col-12">
        

      <div class="titulo col-12">
        <h2>
          <%= title %> 
        </h2>
      </div>

      <form action="/products/edit/<%= producto.id %>?_method=PUT" method="POST" enctype="multipart/form-data" class="formulario">
      
        <div>
          <div class="col-12 col-md-4 mt-3 d-flex flex-column align-items-center">
              
            <img src="/images/logos/<%= producto.image %>" class="avatarImg" alt="avatar" width="75%"
              style="object-fit: cover; object-position: top;">

          </div>
        </div>

        <div class="col">
          <label for="">Nombre</label>
          <input type="text" class="form-control" name="name" value="<%= producto.name %> " disabled>
      </div>
    <div class="col">
      <label for="">Marca</label>
      <input type="text" class="form-control" name="marca" value="<%= producto.trademark.name %> " disabled>
  </div>
      <div class="col">
        <label for="">Modelo</label>
        <input type="text" class="form-control" name="model" value="<%= producto.model %> " disabled>
    </div>
    <div class="col">
      <label for="">Precio</label>
      <input type="number" class="form-control <%= (typeof old != 'undefined' && old.price && !errors.price)?"is-valid":(typeof errors != 'undefined' && errors.price)?"is-invalid": ""  %>" name="price" value="<%= producto.price %>">
      <small id="errorprice" class="text-danger"><%= (typeof errors != 'undefined' && errors.price)?errors.price.msg: "" %> </small>
    </div>
    <div class="col">
      <label for="">Colores</label>
      <input type="text" class="form-control" name="colors" value="<%= producto.colors %>">
    </div>
   <!-- <div class="col">
      <label for="">Company</label>
      <input type="text" class="form-control" name="company" value="">
    </div>-->
    <div class="col">
      <p>Compania</p>
      <select name="company" class="form-control <%= (typeof old != 'undefined' && old.company && !errors.company)?"is-valid":(typeof errors != 'undefined' && errors.company)?"is-invalid": ""  %>"  value="<%= (typeof old != 'undefined' && old.company)?old.company:'' %>" >
          <option value="Empresa">Empresa</option>
          <option value="Libre">Libre</option>
        </select>   
        <small id="errorNombre" class="text-danger"><%= (typeof errors != 'undefined' && errors.company)?errors.company.msg: "" %> </small>
  </div>
    <div class="col">
      <label for="">Descuento</label>
      <input type="text" class="form-control <%= (typeof old != 'undefined' && old.discount && !errors.discount)?"is-valid":(typeof errors != 'undefined' && errors.discount)?"is-invalid": ""  %>" name="discount" value="<%= producto.discount %>">
      <small class="text-danger" id="errordiscount"><%= (typeof errors != 'undefined' && errors.discount)?errors.discount.msg: "" %> </small>
    </div>
    <div class="col">
      <label for="">Capacidad</label>
          <select name="capacidad" id="" class="form-control">
              <option value="32">32 GB</option>
              <option value="64">64 GB</option>
              <option value="128">128 GB</option>
          </select>
      </div>
      <div class="col">
        <label for="description">Agregar Descripcion:</label>
<br>
<small id="errorDescription" class="text-danger"><%= (typeof errors != 'undefined' && errors.description)?errors.description.msg: "" %> </small>
<textarea placeholder="" name="description" cols="39" rows="5" class="form-control <%= (typeof old != 'undefined' && old.description && !errors.description)?"is-valid":(typeof errors != 'undefined' && errors.description)?"is-invalid": "" %>" ><%= (typeof old != 'undefined' && old.description)?old.description:'' %></textarea>
<small id="errorDescription" class="text-danger"><%= (typeof errors != 'undefined' && errors.description)?errors.description.msg: "" %> </small>
</div>
    <div class="boton">
      <button class="subir" type="submit" name="id" value="<%= producto.id %> ">Guardar</button>
    </div>

    <div class="eliminar">
      <form action="/products/delete/<%= producto.id%>?_method=DELETE" method="POST">
        <button type="submit" class="btn-sm btn-danger" id="darBaja"><i class="fas fa-trash"></i></button>
      </form>
    </div>

      </form>

    </div>

    <%- include('partials/footer') %> 
</body>
</html>