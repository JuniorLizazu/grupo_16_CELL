<!DOCTYPE html>
<html lang="es">
<%- include('partials/head') %>

<body>
    <%- include('partials/header') %> 
    
    <div class="signup-form col-12">
        

      <div class="titulo col-12">
        <h2>
          <%= title %> 
        </h2>
      </div>

      <div class="formulario">
      <form action="/users/profile/<%= usuario.id %>?_method=PUT" method="POST" enctype="multipart/form-data">
      
        <div>
          <div class="col-12 col-md-4 mt-3 d-flex flex-column align-items-center">
              
            <img src="/images/users/<%= usuario.avatar %>" class="avatarImg" alt="avatar" width="75%"
              style="object-fit: cover; object-position: top;">

            <div class="form-group w-75">
              <input type="file" class="form-control" id="avatarImput" name="avatar" placeholder="Actualizar Nombre">
            </div>
          </div>
        </div>

        <div class="col">
          <label for="">Nombre</label>
          <input type="text" class="form-control" name="nombre" value="<%= usuario.nombre %> " disabled>
      </div>
      <div class="col">
        <label for="">Apellido</label>
        <input type="text" class="form-control" name="apellido" value="<%= usuario.apellido %> " disabled>
    </div>
      <div class="col">
        <label for="">Email</label>
        <input type="text" class="form-control" name="nombre" value="<%= usuario.email %> " disabled>
    </div>
    <div class="col">
      <label for="">Fecha de Nacimiento</label>
      <input type="date" class="form-control" name="fecha" value="<%= usuario.fecha %>">
    </div>
    <div class="col">
      <label for="provincia">Provincia</label>
      <select name="provincia" id="provincia" class="form-control">
          <% if (usuario.provincia) { %>
              <option value="<%- usuario.provincia %>" hidden selected ><%- usuario.provincia %></option>
          <% } else { %>
              <option value="0" hidden selected >Seleccione su Provincia</option>
          <% } %>
      </select>
  </div>
  <div class="col">
    <label for="ciudad">Locaildad</label>
    <select name="ciudad" id="ciudad" class="form-control">
        <% if (usuario.ciudad) { %>
            <option value="<%- usuario.ciudad %>" hidden selected ><%- usuario.ciudad %></option>
        <% } else { %>
            <option hidden selected value="0" >Seleccione su Localidad</option>
            <option value="0" >seleccione primero su provincia</option>
        <% } %>
    </select>
</div>
    <div class="col">
      <label for="">Direcci√≥n</label>
      <input type="text" class="form-control" name="direccion" value="<%= usuario.direccion %>">
    </div>
    <div class="boton">
      <button class="subir" type="submit" name="id" value="<%= usuario.id %> " id="actualizar">Actualizar Perfil</button>
    </div>

  </form>
    <div>
      <form action="/users/delete/<%= usuario.id %>?_method=DELETE" method="POST" enctype="multipart/form-data" id="profileDelete-form">
        <button class="btn btn-danger" type="submit" name="id" id="eliminar" value="<%= usuario.id %> ">Eliminar Perfil</button>
      </form>
    </div>
     
  </div>
    </div>

    <%- include('partials/footer') %> 
</body>
</html>