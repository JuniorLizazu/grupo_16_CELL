<!DOCTYPE html>
<html lang="es">
<%- include('partials/head') %>

<body>
    <%- include('partials/header') %> 
    
    <div class="signup-form col-12">
        

      <div class="titulo col-12">
        <h2>
          <%= title %> 
        </h2>
      </div>

      <form action="/users/profile/<%= usuario.id %>?_method=PUT" method="POST" enctype="multipart/form-data" class="formulario">
      
        <div>
          <div class="col-12 col-md-4 mt-3 d-flex flex-column align-items-center">
              
            <img src="/images/users/<%= usuario.avatar %>" class="avatarImg" alt="avatar" width="75%"
              style="object-fit: cover; object-position: top;">

            <div class="form-group w-75">
              <input type="file" class="form-control" id="avatarImput" name="avatar" placeholder="Actualizar Nombre">
            </div>
          </div>
        </div>

        <div class="col">
          <label for="">Nombre</label>
          <input type="text" class="form-control" name="nombre" value="<%= usuario.nombre %> " disabled>
      </div>
      <div class="col">
        <label for="">Apellido</label>
        <input type="text" class="form-control" name="apellido" value="<%= usuario.apellido %> " disabled>
    </div>
      <div class="col">
        <label for="">Email</label>
        <input type="text" class="form-control" name="nombre" value="<%= usuario.email %> " disabled>
    </div>
    <div class="col">
      <label for="">Fecha de Nacimiento</label>
      <input type="date" class="form-control" name="fecha" value="<%= usuario.fecha %>">
    </div>
    <div class="col">
      <label for="">Provincia</label>
      <input type="text" class="form-control" name="provincia" value="<%= usuario.provincia %>">
    </div>
    <div class="col">
      <label for="">Ciudad</label>
      <input type="text" class="form-control" name="ciudad" value="<%= usuario.ciudad %>">
    </div>
    <div class="col">
      <label for="">Direcci√≥n</label>
      <input type="text" class="form-control" name="direccion" value="<%= usuario.direccion %>">
    </div>
    <div class="boton">
      <button class="subir" type="submit" name="id" value="<%= usuario.id %> ">Actualizar Perfil</button>
    </div>

    <div class="eliminar">
      <form action="/users/eliminar/<%= usuario.id%>?_method=DELETE" method="POST">
        <button type="submit" class="btn-sm btn-danger" id="darBaja">Dar de baja mi cuenta</button>
      </form>
    </div>

      </form>

    </div>

    <%- include('partials/footer') %> 
</body>
</html>