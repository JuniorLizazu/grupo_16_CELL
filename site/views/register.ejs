<!DOCTYPE html>
<html lang="es">
   
    <%- include('partials/head') %>
   
<body>
     <!--ACA HEADER-->
     <%- include('partials/header') %>

        <div class="signup-form">
            <form action="" method="POST">
                <h2>Complet√° tus datos</h2>
                <div class="form-group">
                    <div class="row">
                        <div class="col">
                            <input type="text" class="form-control" name="name" placeholder="Nombre" required="required">
                        </div>

                        <div class="col">
                            <input type="text" class="form-control" name="apellido" placeholder="Apellido" required="required">
                        </div>
                    </div>        	
                </div>
                <div class="form-group">
                    <input type="email" class="form-control" name="email" placeholder="Email" required="required">
                </div>
                <div class="form-group">
                    <input type="password" class="form-control" name="pass" placeholder="Clave" required="required">
                </div>
                <div class="form-group">
                    <input type="password" class="form-control" name="confirm" placeholder="Confirmar Clave" required="required">
                </div>
                <div class="form-group">
                    <input type="file" class="form-control" name="avatar" placeholder="Avatar" required="required">
                </div>
                        
                <div class="form-group">
                    <label class="form-check-label"><input type="checkbox" required="required"> Acepto los <a href="#">Terminos y Condiciones</a> &amp; <a href="#">Privacidad</a></label>
                </div>
                <div class="form-group">
                    <button type="submit" class="btn btn-success btn-lg btn-block"><a class="hj" href="/users/login">Registrarme</a></button>
                </div>
                
            </form>
        </div>
    <!--FOOTER-->
    <%- include('partials/footer') %>
