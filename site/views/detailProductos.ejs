<!DOCTYPE html>
<html lang="es">

<!--ACA HEAD-->
<%- include('partials/head') %>

<body>
    <!--ACA HEADER-->
    <%- include('partials/header') %>
      
    <html>
    <body>
        <div class="container">
        	<div class="row">
               <div class="col-12 col-md-6 item-photo">
                    <img style="max-width:80%;" src="/images/logos/<%= producto.image %>" />
                </div>
                <div class="col-12 col-md-4 item-col" style="border:0px solid gray">
                    <!-- Datos del vendedor y titulo del producto -->
                    <h3><%= producto.name %></h3>    
                    
        
                    <!-- Precios -->
                    <h6 class="title-price"><small>PRECIO FINAL</small></h6>
                    <h3 style="margin-top:0px;">
                        <span>$<%= producto.price.toString().replace(/\B(?=(\d{3})+(?!\d))/g, ".") %><strong> <%= producto.discount %> % OFF</strong></span>
                    </h3>
        
                    <!-- Detalles especificos del producto -->
                    <div class="section">
                        <h6 class="title-attr" style="margin-top:15px;" ><small>COLOR</small></h6>                    
                        <div>
                            <div class="attr" style="width:25px;background:#5a5a5a;"></div>
                            <div class="attr" style="width:25px;background:white;"></div>
                        </div>
                    </div> 
                    <div class="section" style="padding-bottom:5px;">
                        <h6 class="title-attr"><small>CAPACIDAD</small></h6>                    
                        <div>
                            <div class="attr2"><%= producto.capacidad %> GB </div>
                            
                        </div>
                    </div>   
                    <div class="section" style="padding-bottom:20px;">
                        <h6 class="title-attr"><small>CANTIDAD</small></h6>                    
                        <div>
                            <div class="btn-minus"><span class="glyphicon glyphicon-minus"></span></div>
                            <input value="1" />
                            <div class="btn-plus"><span class="glyphicon glyphicon-plus"></span></div>
                        </div>
                    </div>                
        
                    <!-- Botones de compra -->
                    <div class="section" style="padding-bottom:20px;">
                        <a href="/products/cart"><button class="btn btn-success"><span style="margin-right:20px" class="glyphicon glyphicon-shopping-cart" aria-hidden="true"></span> Agregar al carro</button></a>
                        <h6><a href="#"><span class="glyphicon glyphicon-heart-empty" style="cursor:pointer;"></span>       Agregar a lista de deseos</a></h6>
                    </div>                                        
                </div>                              
        
                <div class="col-12 col-md-12">
                    <ul class="menu-items">
                        <li class="active">Detalle del producto</li>
                    </ul>
                    <div class="divClass">
                        <ul class="detail">
                            <li>Marca: <%= trademark.name %></li>
                            <li>¿Dual Sim?: <%= producto.dualsim %></li>
                            <li>Modelo: <%= producto.model %></li>
                            <li>Ram: <%= producto.capacidad %></li>
                            <li>Color: <%= producto.colors %></li>
                            <li>Compañia: <%= producto.company %></li>
                                
                        </ul>  
                        <p class="description">
                            <small>
                                <%= producto.description %> 
                            </small>
                        </p>
                    </div>

                </div>		
            </div>
        </div>        
    </body>
</html>

  <!--FOOTER-->
  <%- include('partials/footer') %>
  <script src="/javascripts/detalle.js"></script>

</body>
</html>