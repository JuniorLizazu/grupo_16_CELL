<!DOCTYPE html>
  <html lang="es">
    
    <!--ACA HEAD-->
    <%- include('partials/head') %>
    <body>
      <!--ACA HEAD-->
    <%- include('partials/header') %>
    
    <section class="row"></section>
      <section class="row"></section>
      <ul class="barra">
      <li class="opciones"><a href="/admin/create">Agregar Producto</a></li>
      <li class="opciones"><a href="/admin/show/1/show">Editar / Eliminar</a></li>
      </ul>

    <div class="container">
        <section>
        <div class="row productos">
          <div class="col-12 titulo">
            <h2>Productos</h2>
          </div>
          
              <% productos.forEach(producto => { %>
     

                <div class="col-12 col-md-6 col-lg-3">
                    <div class="contenido">
                      <p><%= producto.name %></p>
                      <figure>
                        <a href="/products/detail/<%= producto.id %>"><img src="/images/logos/<%= producto.image %>" alt=""/></a>
                      </figure>
                      <article>
                        <h2>
                          $<%- (producto.price - producto.price * producto.discount / 100).toFixed(0).toString().replace(/\B(?=(\d{3})+(?!\d))/g, ".") %>
                        </h2>
                        <% if (producto.discount !=0) { %>
                            <span><%= producto.discount %>% OFF</span>
                          <% } %>
                        
                      </article>
                    </div>
                  </div>

              
              <% }) %>
              
            </div>

        </section>
    </div>
      
      


    <!--FOOTER-->
    <%- include('partials/footer') %>

  </body>
</html>