<header class="container-fluid">
        
  <div class="container">
    
    <div class="row">
      <!--Logotipo-->
      <div class="col-5 col-md-2 col-lg-2 logo">
        <a href="/"
          ><img src="/images/logo.png" alt=" "
        /></a>
      </div>

      <!--Buscador-->
      <div class="col-7 col-md-6 col-lg-6">
        <form action="">
          <input
            type="text"
            name="search"
            placeholder="Buscar"
          />
          <button type="submit">
            <i class="fas fa-search"></i>
          </button>
        </form>
      </div>

      <!--finaliza el div.row-->
    </div>
    <!--Links de registro, contacto, etc-->
    <nav class="navbar-expand-md">
      <!--Boton para que desplegar el menu si es Celular-->
      <button
        class="navbar-toggler desplegable"
        type="button"
        data-toggle="collapse"
        data-target="#navbarSupportedContent"
        aria-controls="navbarSupportedContent"
        aria-expanded="false"
        aria-label="Toggle navigation"
      >
        <i class="fas fa-bars"></i>
      </button>

      <!--barra de menu que aparece a partir de tablet-->
      <div class="collapse navbar-collapse" id="navbarSupportedContent">
        
        <ul class="menu navbar-nav ">
          <% if (typeof user == "undefined") { %>
          <li>
            <a href="">Contacto</a>
          </li>
          
          <li>
            <a href="/users/register">Cre√° tu Cuenta</a>
          </li> 
          <li>
            <a href="/products/cart"><i class="fas fa-shopping-cart"></i></a>
          </li>
          <li>
            <a href="/users/login"><img src="/images/users/default.png" alt="" width="40px"></a>
          </li>
          <% } else{ %>
            <li>
              <a href="/products/admin">Tus Productos</a>
            </li>
          <li>
            <a href="/products/cart"><i class="fas fa-shopping-cart"></i></a>
          </li>
          <li>
            <a href="/users/logout"><i class="fas fa-sign-in-alt "></i></a>
        </li>
        <li>
          <a href=""><img src="/images/users/<%= locals.user.avatar %> " alt="avatar" class="avatar"></a>
        </li>
          <% } %>
        </ul>
        
      </div>
      <!--finaliza barra de menu-->
    </nav>
  </div>
  <!--Fin del header-->
</header>